{
  "exclude": ["./example"],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2019", "DOM"],

    "outDir": "dist",
    "rootDir": "src",

    "esModuleInterop": true,

    "experimentalDecorators": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
